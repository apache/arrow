//Compiler configuaration to build the ES5 Closure Compiler target
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "declaration": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "paths": {
      "apache-arrow/*": [
        "targets/es5/umd/*"
      ]
    }
  }
}
