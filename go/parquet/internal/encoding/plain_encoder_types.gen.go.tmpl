  copyFrom{{.Name}}LE(out, dec.data[:nbytes])
  dec.data = dec.data[nbytes:]
  dec.nvals -= max
  return max, nil
}

// DecodeSpaced is the same as decode, except it expands the data out to leave spaces for null values
