func Test{{.Name}}Funcs_Sum(t *testing.T) {
	mem := memory.NewCheckedAllocator(memory.NewGoAllocator())
	defer mem.AssertSize(t, 0)
	vec := makeArray{{.Name}}(10000, mem)
	defer vec.Release()
	res := math.{{.Name}}.Sum(vec)
