prefix=/usr/local
includedir=${prefix}/include
libdir=${prefix}/lib

so_version=1500
abi_version=1500
full_so_version=1500.0.0

Name: Apache Arrow
Description: Arrow is a set of technologies that enable big-data systems to process and move data fast.
Version: 15.0.0-SNAPSHOT
Requires:
Requires.private:
Libs: -L${libdir} -larrow
Libs.private: -larrow_bundled_dependencies
Cflags: -I${includedir}
Cflags.private: -DARROW_STATIC
